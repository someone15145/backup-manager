<!-- MainWindow.xaml -->
<Window x:Class="BackupManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BackupManager" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" x:Name="ProfilesColumn" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Профили -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
            <DockPanel>
                <TextBlock Text="Профили" FontWeight="Bold" DockPanel.Dock="Left" VerticalAlignment="Center" />
                <Button Content="+" Width="30" Click="AddProfile_Click" HorizontalAlignment="Right" />
            </DockPanel>
            <DataGrid x:Name="ProfilesDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                      SelectionChanged="ProfilesDataGrid_SelectionChanged" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*" />
                    <DataGridTemplateColumn Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="✎" Width="30" Tag="{Binding}" Click="EditProfile_Click" ToolTip="Редактировать" />
                                    <Button Content="📂" Width="30" Tag="{Binding}" Click="OpenBackupFolder_Click" ToolTip="Открыть папку бэкапов" />
                                    <Button Content="🗑" Width="30" Tag="{Binding}" Click="DeleteProfile_Click" ToolTip="Удалить" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- GridSplitter для изменения ширины -->
        <GridSplitter Grid.Row="0" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Gray" />

        <!-- Бэкапы -->
        <StackPanel Grid.Row="0" Grid.Column="2" Margin="10">
            <DockPanel>
                <Button Content="+" Width="30" Click="CreateBackup_Click" HorizontalAlignment="Left" ToolTip="Создать бэкап" />
                <Button Content="↻" Width="30" Click="RefreshBackups_Click" HorizontalAlignment="Left" ToolTip="Обновить" Margin="5,0,0,0" />
            </DockPanel>
            <DataGrid x:Name="BackupsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" 
                      CellEditEnding="BackupsDataGrid_CellEditEnding" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding DisplayName}" Width="*" />
                    <DataGridTextColumn Header="Дата и время" Binding="{Binding Created, StringFormat=yyyy-MM-dd HH:mm:ss}" IsReadOnly="True" />
                    <DataGridTemplateColumn Header="Действия" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="↻" Tag="{Binding}" Click="RestoreBackup_Click" ToolTip="Восстановить" />
                                    <Button Content="📂" Tag="{Binding}" Click="OpenBackupInExplorer_Click" ToolTip="Открыть в проводнике" />
                                    <Button Content="🗑" Tag="{Binding}" Click="DeleteBackup_Click" ToolTip="Удалить" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- Логи -->
        <TextBox x:Name="GeneralLogsTextBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="10" 
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" />
    </Grid>
</Window>