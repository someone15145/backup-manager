<!-- MainWindow.xaml -->
<Window x:Class="BackupManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BackupManager" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Левый блок: Профили -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
            <DockPanel>
                <TextBlock Text="Профили" FontWeight="Bold" DockPanel.Dock="Left" VerticalAlignment="Center" />
                <Button Content="+" Width="30" Click="AddProfile_Click" HorizontalAlignment="Right" />
            </DockPanel>
            <ListBox x:Name="ProfilesListBox" SelectionChanged="ProfilesListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" DockPanel.Dock="Left" />
                            <Button Content="✎" Width="30" Tag="{Binding}" Click="EditProfile_Click" HorizontalAlignment="Right" ToolTip="Редактировать" />
                            <Button Content="📂" Width="30" Tag="{Binding}" Click="OpenBackupFolder_Click" HorizontalAlignment="Right" ToolTip="Открыть папку бэкапов" />
                            <Button Content="🗑" Width="30" Tag="{Binding}" Click="DeleteProfile_Click" HorizontalAlignment="Right" ToolTip="Удалить" />
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- Правый блок: Вкладки Бэкапы и Логи -->
        <TabControl Grid.Row="0" Grid.Column="1" Margin="10">
            <TabItem Header="Бэкапы">
                <StackPanel>
                    <Button Content="+" Width="30" HorizontalAlignment="Right" Click="CreateBackup_Click" ToolTip="Создать бэкап" />
                    <DataGrid x:Name="BackupsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CellEditEnding="BackupsDataGrid_CellEditEnding">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" />
                            <DataGridTextColumn Header="Название" Binding="{Binding DisplayName}" />
                            <DataGridTextColumn Header="Дата и время" Binding="{Binding Created, StringFormat=yyyy-MM-dd HH:mm:ss}" IsReadOnly="True" />
                            <DataGridTemplateColumn Header="Действия">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Восстановить" Tag="{Binding}" Click="RestoreBackup_Click" />
                                            <Button Content="📂" Tag="{Binding}" Click="OpenBackupInExplorer_Click" />
                                            <Button Content="🗑" Tag="{Binding}" Click="DeleteBackup_Click" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Логи">
                <DataGrid x:Name="LogsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Дата и время" Binding="{Binding Time, StringFormat=yyyy-MM-dd HH:mm:ss}" />
                        <DataGridTextColumn Header="Сообщение" Binding="{Binding Message}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <!-- Нижняя область: Общие логи -->
        <TextBox x:Name="GeneralLogsTextBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" />
    </Grid>
</Window>