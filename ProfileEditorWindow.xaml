<!-- ProfileEditorWindow.xaml -->
<Window x:Class="BackupManager.ProfileEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование профиля" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Название:" Width="100" />
            <TextBox x:Name="NameTextBox" Width="250" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Исходная папка:" Width="100" />
            <TextBox x:Name="SourcePathTextBox" Width="200" />
            <Button Content="Обзор" Click="BrowseSource_Click" Width="50" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Папка бэкапов:" Width="100" />
            <TextBox x:Name="BackupPathTextBox" Width="200" />
            <Button Content="Обзор" Click="BrowseBackup_Click" Width="50" />
        </StackPanel>
        <Button Grid.Row="3" Content="Сохранить" Click="Save_Click" HorizontalAlignment="Right" Margin="0,10" />
    </Grid>
</Window>